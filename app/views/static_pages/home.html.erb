<% @user = current_user %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= render "shared/stats" %>
    </section>
    <%= render "shared/entry_form" %>
  </aside>
  <div class="col-md-8">
    <h3><%= t "entries.index.header" %></h3>
    <%= render "shared/feed" %>
  </div>
</div>
