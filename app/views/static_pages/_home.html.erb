<% @user = current_user %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if logged_in? %>
        <h1>
          <a href="<%= user_url @user %>">
            <%= gravatar_for @user %>
            <%= @user.name %>
          </a>
        </h1>
        <%= render "shared/stats" %>
        <%= render "shared/entry_form" %>
      <% else %>
        <div class="alert alert-info">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <p><%= t "entries.index.msg_log_in" %></p>
        </div>
      </section>
    <% end %>
  </aside>
  <div class="col-md-8">
    <h3><%= t "entries.index.header" %></h3>
    <%= render "shared/feed" %>
  </div>
</div>
