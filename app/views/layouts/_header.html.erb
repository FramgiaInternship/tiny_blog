<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_pages.header.logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to root_path do %>
            <i class="fa fa-home"></i>
            <%= t "static_pages.header.home" %>
          <% end %>
        </li>
        <li>
          <%= link_to help_path do %>
            <i class="fa fa-question-circle"></i>
            <%= t "static_pages.header.help" %>
          <% end %>
        </li>
        <% if logged_in? %>
          <li>
            <%= link_to users_path do %>
              <i class="fa fa-users"></i>
              <%= t "common.link_users" %>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-user"></i>
              <%= t "static_pages.header.account" %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to current_user do %>
                  <i class="fa fa-info-circle"></i>
                  <%= t "static_pages.header.link_profile" %>
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_url current_user do %>
                  <i class="fa fa-gears"></i>
                  <%= t "static_pages.header.link_settings" %>
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to logout_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>
                  <%= t "static_pages.header.log_out" %>
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to signup_path do %>
              <i class="fa fa-users"></i>
              <%= t "static_pages.header.sign_up" %>
            <% end %>
          </li>
          <li>
            <%= link_to login_path do %>
              <i class="fa fa-sign-in"></i>
              <%= t "static_pages.header.log_in" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
