<%= form_for @entry  do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.label t "entries.create.title" %>
    <%= f.text_field :title, class: "form-control" %>

    <%= f.label t "entries.create.content" %>
    <%= f.text_area :content, placeholder: t("entries.create.text_area_holder"), class: "entry_content form-control" %>
  </div>
  <% if logged_in? %>
    <%= f.submit "Post", class: "btn btn-primary" %>
  <% else %>
    <%= f.submit "Post", class: "btn btn-primary", disabled: true %>
  <% end %>
<% end %>
