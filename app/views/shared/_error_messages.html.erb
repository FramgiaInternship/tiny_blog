<% if object.errors.any?%>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t "common.error_msg" %>
      <%= pluralize object.errors.count, t("common.error") %>.
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
