<% provide :title, @title %>
<div class="row">
  <aside class="col-md-4">
    <%= render "shared/user_info" %>
    <section class="stats">
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: Settings.AVATAR_EXTRA_SMALL),
              user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <div class="text-center">
        <%= will_paginate %>
      </div>
    <% end %>
  </div>
</div>
